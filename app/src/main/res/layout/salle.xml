<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    >


    <ImageView
        android:src="@drawable/salle_logo"
        android:id="@+id/image_porte"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ED0000"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Nom"
        android:layout_alignTop="@+id/image_porte"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/position"
        android:id="@+id/image_position"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/site"
        android:layout_marginLeft="80dp" />


    <TextView
        android:id="@+id/site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFC107"
        android:layout_below="@+id/name"
        tools:text="Site"
        android:layout_marginLeft="110dp"
        android:textSize="25sp"
        />

    <ImageView
        android:src="@drawable/groupe"
        android:id="@+id/image_groupe"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/site"
        android:layout_marginLeft="210dp" />


    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFC107"
        android:layout_below="@+id/name"
        tools:text="Size"
        android:layout_marginLeft="250dp"
        android:textSize="25sp"
        />

</RelativeLayout>